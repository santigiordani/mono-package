% Redefinimos el entorno de demostración de amsmath para que este indentado
\makeatletter
\renewenvironment{proof}[1][\proofname]{\par
  \pushQED{\qed}%
  \normalfont \topsep6\p@\@plus6\p@\relax
  \list{}{%
    \leftmargin = \parindent%
    \setlength{\labelwidth}{0pt}%
    \setlength{\itemindent}{-6pt}%
  }%
  \item\hskip\labelsep{\itshape#1\@addpunct{.}} \ignorespaces
}{%
  \popQED\endlist\@endpefalse
}
\makeatother

% Definimos un nuevo theoremstyle (un objeto de amsmath) con titulos en negrita e indentados
\newtheoremstyle{indenteddefinition}
  {} % Space above
  {} % Space below
  {\hangindent=\parindent} % Body font
  {\parindent} % Indent amount (empty for no indent, you can set it to 3mm)
  {\bfseries} % Theorem head font
  {} % Punctuation after theorem head
  {.5em} % Space after theorem head
  {} % Theorem head spec (can be left empty, or customize as needed)

% Definimos un nuevo theoremstyle (un objeto de amsmath) con titulos en cursiva e indentados
\newtheoremstyle{indentedremark}
  {} % Space above
  {} % Space below
  {\hangindent=\parindent} % Body font
  {\parindent} % Indent amount (empty for no indent, you can set it to 3mm)
  {\itshape} % Theorem head font
  {:} % Punctuation after theorem head
  {.5em} % Space after theorem head
  {} % Theorem head spec (can be left empty, or customize as needed)

% Definimos los nuevos entornos
\theoremstyle{indenteddefinition}
\newtheorem{lema}{Lema}[section]
\newtheorem{definicion}[lema]{Definición}
\newtheorem{proposicion}[lema]{Proposición}
\newtheorem{teorema}[lema]{Teorema}
\newtheorem{corolario}[lema]{Corolario}
\newtheorem{ejemplo}[lema]{Ejemplo}
\newtheorem{ejercicio}[lema]{Ejercicio}

\theoremstyle{indentedremark}
\newtheorem*{observacion}{Observación}

\renewcommand{\proofname}{Demostración}
\newenvironment{demostracion}{\begin{proof}}{\end{proof}}


% Encabezado de Tomas (que se robó de la UBA)
\newcommand{\encabezado}[3]{
    {\noindent \scriptsize \sc #1 \hfill #2}
    \begin{center}
        \large \sc #3
    \end{center}
}

% Título entre lineas de Tomas (que también se robó de la UBA)
\newcommand{\linea}[1]{
    \bigskip                                                % Dejamos espacio
    \hrule                                                  % Hacemos una linea
    \begin{center}
        \bf \large #1
    \end{center}
    \hrule                                                  % Hacemos una linea
    \bigskip                                                % Dejamos espacio
}  

